{
  "manifest_version": 2,
  "name": "Apollo",
  "version": "1.0",

  "description": "Sends links to an Apollo server to download.",

  "permissions": [
    "<all_urls>",
    "activeTab",
    "notifications",
    "storage"
  ],

  "icons": {
    "64": "icon/apollo-64.png"
  },

  "browser_action": {
    "default_icon": "icon/apollo-32.png",
    "default_title": "Apollo Download",
    "default_popup": "html/popup.html",
    "browser_style": true
  },

  "options_ui": {
    "page": "html/settings.html"
  },

  "background": {
    "scripts": [
      "dist/background.js"
    ]
  }
}
